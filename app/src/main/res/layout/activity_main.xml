<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"/>
    <Button
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="412dp"
            tools:layout_editor_absoluteX="161dp" android:id="@+id/button"/>
    <Button
            android:text="결과"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="157dp"
            tools:layout_editor_absoluteX="294dp" android:id="@+id/button2"/>
    <EditText
            android:layout_width="353dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="48dp" tools:layout_editor_absoluteX="29dp" android:id="@+id/height"
            android:hint="키"/>
    <EditText
            android:layout_width="353dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="93dp" tools:layout_editor_absoluteX="28dp" android:id="@+id/weight"
            android:hint="몸무게"/>

</android.support.constraint.ConstraintLayout>